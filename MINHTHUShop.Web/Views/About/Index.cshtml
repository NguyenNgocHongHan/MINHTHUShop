@model MINHTHUShop.Web.Models.FeedbackVM
@using BotDetect.Web.Mvc;

@{
    ViewBag.Title = "Liên hệ";
    Layout = "~/Views/Shared/Layouts.cshtml";
}

@section footerJS{
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDvkGM7gsN6VMZXmBnPVhf98jdg5t5DeRA"></script>
    <script src="~/Content/Client/js/controller/about.js"></script>
}

<style>
    #map {
        height: 100%;
    }
</style>

<link href="@BotDetect.Web.CaptchaUrls.Absolute.LayoutStyleSheetUrl" rel="stylesheet" type="text/css" />

<input type="hidden" id="hidAddress" value="@Model.About.Name<br />Địa chỉ: @Model.About.Address" />
<input type="hidden" id="hidLat" value="@Model.About.MapLat" />
<input type="hidden" id="hidLong" value="@Model.About.MapLong" />
<input type="hidden" id="hidName" value="@Model.About.Name" />

<div class="main">
    <div class="reservation_top">
        <div class="contact_right">
            <h3>Cửa hàng</h3>
            <address class="address">
                <p>@Model.About.Name<br /><small>@Model.About.Address</small></p>
                <dl>
                    <dt> </dt>
                    @if (Model.About.Phone != null)
                    {
                        <dd>Điện thoại: <span>@Model.About.Phone</span></dd>
                    }
                    @if (Model.About.Email != null)
                    {
                        <dd>Email: <a href="mailto:(@Model.About.Email)">@Model.About.Email</a></dd>
                    }
                    @if (Model.About.Website != null)
                    {
                        <dd>Website: <a href="@Model.About.Website">@Model.About.Website</a></dd>
                    }
                    @if (Model.About.Description != null)
                    {
                        <dd>Mô tả: <span>@Model.About.Description</span></dd>
                    }
                </dl>
            </address>
            <div class="clearfix"></div>
            <div id="map"></div>
        </div>
    </div>

    <div class="reservation_top">
        <div class="contact_right">
            <h3>Gửi phản hồi</h3>
            <div class="contact-form">
                @using (Html.BeginForm("SendFeedback", "About", FormMethod.Post))
                {
                    if (ViewData["SuccessMsg"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            Bạn đã gửi phản hồi <strong>thành công</strong>.
                            <br />Chúng tôi sẽ liên hệ với bạn trong thời gian sớm nhất!
                        </div>
                    }
                    @Html.ValidationSummary(false, "", new { @class = "error" });

                    <h5 style="color:grey">Nội dung phản hồi:</h5>
                    @Html.TextAreaFor(model => model.Message);

                    <h5 style="color: grey">Nhập mã capcha:</h5>
                    MvcCaptcha aboutCaptcha = new MvcCaptcha("aboutCaptcha");
                    @Html.Captcha(aboutCaptcha)
                    @Html.TextBox("CaptchaCode")

                    <input type="submit" value="Gửi đi">
                    <div class="clearfix"> </div>
                }
            </div>
        </div>
    </div>
</div>

