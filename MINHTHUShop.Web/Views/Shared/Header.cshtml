        <div class="container">
            <div class="top-header-left">
                <ul class="support">
                    <li><a href="#"><label> </label></a></li>
                    <li><a href="#"> Hỗ trợ <span class="live"> 24/7 </span></a></li>
                </ul>
                <ul class="support">
                    <li class="van"><a href="#"><label> </label></a></li>
                    <li><a href="#"> Giao hàng <span class="live"> nhanh chóng </span></a></li>
                </ul>
                <div class="clearfix"> </div>
            </div>
            <div class="top-header-right">
                <ul class="support" style="color:white">
                    <li><a href="/trang/gioi-thieu.html">Giới thiệu</a></li> |
                    <li><a href="/lien-he.html">Liên hệ</a></li>
                </ul>
                <!---->
                <div class="clearfix"> </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
    <div class="bottom-header">
        <div class="container">
            <div class="header-bottom-left">
                <div class="logo">
                    <a href="/"><img style="width:200px; height:55px; margin-left:10px;" src="~/Content/Client/images/logoMINHTHU.jpg" alt=" " /></a>
                </div>
                <div class="search">
                    <form method="get" action="/tim-kiem.html">
                        <input type="text" id="txtKeyword" name="keyword" placeholder="Nhập tên sản phẩm">
                        <input type="submit" value="Tìm kiếm" id="btnSearch">
                    </form>
                </div>
                <div class="clearfix"> </div>
            </div>
            <div class="header-bottom-right">
                @using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { @id = "frmLogout" }))
                {
                    if (Request.IsAuthenticated)
                    {
                        @Html.AntiForgeryToken()
                        <div class="account"><a href="/tai-khoan.html"><span> </span>Chào <strong>@User.Identity.GetUserName()</strong></a> | <a href="#" id="btnLogout">Đăng xuất</a></div>
                    }
                    else
                    {
                        <ul class="login">
                            <li><a href="/dang-nhap.html"><span> </span>Đăng nhập</a></li> |
                            <li><a href="/dang-ky.html">Đăng ký</a></li>
                        </ul>
                    }
                }
                <div class="cart"><a href="/gio-hang.html"><span> </span>Giỏ hàng</a></div>
                <div class="clearfix"> </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>
